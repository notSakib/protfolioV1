---
import logo from '@/images/homepage/logo.png'
const { collection, width } = Astro.props
import { ViewTransitions } from 'astro:transitions'
import { Image } from 'astro:assets'
---

<nav class='flex items-center justify-between py-6 mb-6' style={'max-width:' + width + 'px'}>
  <div>
    <a href='/'>
      <Image src={logo} alt='Md Saban logo' class='w-[90px]' />
    </a>
  </div>
  <div>
    <a href='/about' class='mr-6'>About</a>
    {
      collection ? (
        <a class='capitalize' href={'/' + collection}>
          {collection}
        </a>
      ) : (
        <a href='/posts'>Posts</a>
      )
    }
  </div>
</nav>

<!-- <ViewTransitions/> -->

<style>
  nav {
    max-width: 1000px;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
  }
</style>
