---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { Image } from "astro:assets";

//videos
import sabanVideo from "@/images/about/saban-video.mp4";
import sabanRunning from "@/images/about/saban-running.mp4";

// images
import heroImg from "@/images/about/hero.jpeg";
import sabanSkating from "@/images/about/saban-skating.jpeg";
import sabanPool from "@/images/about/saban-pool.jpeg";
import sabanfoosball from "@/images/about/saban-foosball.jpeg";
import sabanTabletennis from "@/images/about/saban-tabletennis.jpeg";
import sabanSwimming from "@/images/about/saban-swimming.jpeg";
import workspaceSetup from "@/images/about/setup.jpeg";
import paragliding from "@/images/about/paragliding.jpeg";
import paraglidingVideo from "@/images/about/paragliding.mp4";
import goaSaban from "@/images/about/goa-saban.jpeg";
import sushi from "@/images/about/sushi.jpeg";
import sabanBike from "@/images/about/saban-bike.jpeg";
import sabanMountain from "@/images/about/saban-mountain.jpeg";
import sabanWallClimbing from "@/images/about/saban-wall-climbing.jpeg";
import waterSport from "@/images/about/water-sport.jpeg";
import baking from "@/images/about/baking.jpeg";
import location from "@/images/about/location.png";

// svgs
const linkedInIcon = `<svg viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="40" height="40" rx="10" fill="#006699"></rect><path fill-rule="evenodd" clip-rule="evenodd" d="M14.7344 29V15.5053H10.249V29H14.7344ZM12.4917 13.6629C14.0558 13.6629 15.0294 12.6266 15.0294 11.3316C15.0002 10.0075 14.0558 9 12.5214 9C10.9871 9 9.98389 10.0075 9.98389 11.3316C9.98389 12.6266 10.9572 13.6629 12.4625 13.6629H12.4916H12.4917Z" fill="white"></path><path fill-rule="evenodd" clip-rule="evenodd" d="M17.2163 29H21.7016V21.464C21.7016 21.0607 21.7308 20.6578 21.8492 20.3695C22.1735 19.5636 22.9115 18.7291 24.1506 18.7291C25.7736 18.7291 26.4229 19.9666 26.4229 21.7807V29H30.9078V21.2624C30.9078 17.1174 28.695 15.1887 25.744 15.1887C23.3243 15.1887 22.262 16.5412 21.6718 17.4624H21.7017V15.5053H17.2164C17.2753 16.7716 17.2164 29 17.2164 29H17.2163Z" fill="white"></path></svg>`
const githubIcon = `<svg height="32" aria-hidden="true" viewBox="0 0 16 16" version="1.1" width="32" data-view-component="true" style="color:white;fill: currentColor;">
    <path d="M8 0c4.42 0 8 3.58 8 8a8.013 8.013 0 0 1-5.45 7.59c-.4.08-.55-.17-.55-.38 0-.27.01-1.13.01-2.2 0-.75-.25-1.23-.54-1.48 1.78-.2 3.65-.88 3.65-3.95 0-.88-.31-1.59-.82-2.15.08-.2.36-1.02-.08-2.12 0 0-.67-.22-2.2.82-.64-.18-1.32-.27-2-.27-.68 0-1.36.09-2 .27-1.53-1.03-2.2-.82-2.2-.82-.44 1.1-.16 1.92-.08 2.12-.51.56-.82 1.28-.82 2.15 0 3.06 1.86 3.75 3.64 3.95-.23.2-.44.55-.51 1.07-.46.21-1.61.55-2.33-.66-.15-.24-.6-.83-1.23-.82-.67.01-.27.38.01.53.34.19.73.9.82 1.13.16.45.68 1.31 2.69.94 0 .67.01 1.3.01 1.49 0 .21-.15.45-.55.38A7.995 7.995 0 0 1 0 8c0-4.42 3.58-8 8-8Z"></path>
</svg>`

const obj = {
  title: "Md Saban",
  descritipon: "I'm a web developer based out of Bengaluru, India, seamlessly blending my love for aesthetics with my knack for problem-solving.",
};

---

<Layout postDetails={obj}>
    <main>
        <section class="max-w-[1200px] md:px-0 px-8">
            <Header width={1200} />
        </section>
        <section class="max-w-[1000px] md:px-0 px-8 py-20">
            <div class="flex flex-col md:flex-row justify-between gap-8">
                <div class="md:w-2/5 w-full">
                    <Image src={heroImg} alt="hero image" class="w-full rounded-xl" />
                </div>
                <div class="md:w-3/5 w-full md:pl-8">
                    <h1 class="text-4xl font-bold">What I'm bout.</h1>
                    <p class="text-lg mt-6">
                        Hey there, I'm Saban, a product engineer passionate about crafting seamless web experiences. My internet journey started in 2014, dabbling in digital marketing before venturing into YouTube, graphics design, UI/UX, and finally, development.
                    </p>
                    <p class="text-lg mt-6">
                        Besides development, I find joy in exploring new horizons, whether it's hitting the field for a sport, jetting off on an adventure, or capturing moments through content creation. 
                        <br>Scroll down to see some of my highlightsâ€”I'd love to connect and chat about our shared interests!
                    </p>
                    <p class="text-lg mt-6">
                        Feel free to get in touch. I'm excited about the opportunity to collaborate and build something incredible together.
                    </p>
                </div>
            </div>
        </section>
        <section class="max-w-[1000px] md:px-0 px-8 pt-20 pb-10 flex gap-4">
            <div class="w-2/4"> 
                <h3 class="text-4xl font-bold mb-4">Where can you find me?</h3>
                <p class="text-lg max-w-lg">I'm currently based in Bengaluru, India. You can catch up with me and stay updated on what I'm building and other exciting updates through my social media channels. Let's stay connected!"</p>
            </div>
            <div class="w-1/4 gap-4">
                <div class="relative rounded-xl">
                    <Image src={location} alt="googlemap" class="rounded-xl w-full" />
                    <div class="pulsating-circle"></div>
                </div>
                
                <div class="bg-black text-white p-8 rounded-xl h-max mt-4"> 
                    <div class="mb-4">
                        <div class="flex items-center">
                            <div set:html={githubIcon} class="color-white"></div>
                            <div class="ml-4">
                                <div class="text-lg leading-none font-semibold">Saban</div>
                                <div class="text-sm">@mdsaban</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-200 p-8 rounded-xl h-max mt-4 ml-auto"> 
                    <div class="mb-4">
                        <div class="flex items-center">
                            <div set:html={linkedInIcon} class="color-white w-8"></div>
                            <div class="ml-4">
                                <div class="text-lg leading-none font-semibold">Saban</div>
                                <div class="text-sm">@mdsaban</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="w-1/4 gap-4">

                <div class="bg-gray-200 p-8 rounded-xl h-max"> 
                    <div class="flex justify-between mb-4">
                        <div class="flex items-center">
                            <Image src='https://pbs.twimg.com/profile_images/1584430322829381633/WONnrPV6_400x400.jpg' alt="profile" inferSize class="rounded-full h-full w-10" />
                            <div class="ml-4">
                                <div class="text-lg leading-none font-semibold">Saban</div>
                                <div class="text-sm">@iamsaban</div>
                            </div>
                        </div>
                        <Image src="https://abs.twimg.com/favicons/twitter.3.ico" inferSize alt="twitter" class="h-full rounded-lg border-4 border-black"/>
                    </div>
                    <div class="mb-6 text-xl">Some random tweet that I posted here and few likes and comments all? SO let's go with this</div>
                    <div class="rounded-full border-gray-300 border text-center font-semibold text-sm py-2">FOLLOW</div>
                </div>
            </div>
        </section>

        <section class="max-w-[1000px] md:px-0 px-8 py-20">
            <div class="text-lg font-semibold">When I'm not coding</div>
            <h3 class="text-4xl font-bold mb-4">I shoot, create & edit</h3>
            <div class="text-lg max-w-lg">
                When I'm not coding, I'm busy creating and editing fun content! Join me in exploring new adventures and sharing stories through videos. Follow me on Instagram for real-time updates and behind-the-scenes fun!
            </div>
            <div class="flex flex-wrap gap-6 mt-8">
                <div>
                    <video src={sabanVideo} autoplay muted loop class="h-[320px] w-[400px] object-cover rounded-xl"></video>
                </div>
                <div>
                    <Image src={workspaceSetup} alt="hero image" class="w-[250px] rounded-xl" />
                </div>
            </div>
        </section>
        <section class="max-w-[1000px] md:px-0 px-8 py-20">
            <div class="text-lg font-semibold">When I'm not on screen</div>
            <h3 class="text-4xl font-bold mb-4">I challenge my physical health</h3>
            <p class="text-lg max-w-lg">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates, a impedit veritatis laudantium velit corporis architecto magnam repellendus voluptate suscipit sit eos ipsum vitae ut nesciunt, sunt, itaque beatae porro!</p>
            <div class="md:columns-3 gap-4 mt-8">
                <Image src={sabanSkating} alt="hero image" class="rounded-xl mb-4" />
                <video src={sabanRunning} autoplay muted loop class="rounded-xl mb-4 w-full object-cover object-center h-[500px]" />
                <Image src={sabanSwimming} alt="hero image" class="rounded-xl mb-4" />
                <div class="strava-embed-placeholder" data-embed-type="activity" data-embed-id="9743357836" data-style="standard"></div>
                <Image src={sabanfoosball} alt="hero image" class="rounded-xl mb-4" />
                <Image src={sabanPool} alt="hero image" class="rounded-xl mb-4" />
                <Image src={sabanTabletennis} alt="hero image" class="rounded-xl mb-4" />
            </div>
        </section>
        
        <section class="max-w-[1000px] md:px-0 px-8 py-20">
            <div class="text-lg font-semibold">Outisde work</div>
            <h3 class="text-4xl font-bold mb-4">All about food, adventure & travel </h3>
            <p class="text-lg max-w-lg">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Voluptates, a impedit veritatis laudantium velit corporis architecto magnam repellendus voluptate suscipit sit eos ipsum vitae ut nesciunt, sunt, itaque beatae porro!</p>
            <div class="md:columns-4 columns-2 gap-4 mt-8">
                <Image src={sabanWallClimbing} alt="hero image" class="rounded-xl object-cover max-h-[300px] mb-4" />
                <Image src={sabanBike} alt="hero image" class="rounded-xl mb-4" />
                <Image src={waterSport} alt="hero image" class="rounded-xl mb-4" />
                <video src={paraglidingVideo} autoplay muted loop class="rounded-xl mb-4 w-full object-cover object-center h-[220px]" />
                <Image src={goaSaban} alt="hero image" class="rounded-xl mb-4" />
                <!-- <Image src={paragliding} alt="hero image" class="rounded-xl mb-4" /> -->
                <Image src={baking} alt="hero image" class="rounded-xl mb-4" />
                <Image src={sabanMountain} alt="hero image" class="rounded-xl mb-4" />
                <Image src={sushi} alt="hero image" class="rounded-xl mb-4" />
            </div>
        </section>
    </main>
    <Footer/>
</Layout>

