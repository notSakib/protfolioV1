<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
<script is:inline src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>

<script>
  const footerSectionAnim = {
    from: {
      transform: 'scale(1)',
      borderRadius: '0',
    },
    to: {
      ease: 'power2.out',
      transform: 'scale(0.9)',
      borderRadius: '0 0 40px 40px',
      scrollTrigger: {
        trigger: "footer",
        scrub: 0.5,
        // markers:true,
      },
    },
};

  document.addEventListener("DOMContentLoaded", (event) => {
    gsap.registerPlugin(ScrollTrigger)
    gsap.fromTo(document.querySelector('main'), footerSectionAnim.from, footerSectionAnim.to);
  });
 
 </script>
 
 

<style>
  body {
    overscroll-behavior: none;
    background-color: #000;
  }
  main {
    background-color: #fff;
  }
  section {
    margin: 0 auto;
  }

  .bg-1,
  .bg-2,
  .bg-3,
  .bg-4,
  .bg-5 {
    opacity: 0;
  }

  /* Animation styles */
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  .animated-gradient {
    animation: fadeIn 4s ease-in-out infinite;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  .bg-1 {
    background: linear-gradient(to right, #f7ebdd, #ffffff);
  }
  .bg-2 {
    background: linear-gradient(to right, #f7dddd, #fffdfd);
    animation-delay: 1s;
  }
  .bg-3 {
    background: linear-gradient(to right, #e5ddf7, #faf8ff);
    animation-delay: 2s;
  }
  .bg-4 {
    background: linear-gradient(to right, #ddf7f6, #fcffff);
    animation-delay: 3s;
  }
  .bg-5 {
    background: linear-gradient(to left, #ebffec, #ffffff);
    animation-delay: 4s;
  }

  .animate-hand {
    animation: handAnimation 1s;
    animation-delay: 1s;
    display: inline-block;
    transform-origin: bottom right;
  }
  @keyframes handAnimation {
    0% {
      transform: rotate(0deg);
    }
    10% {
      transform: rotate(-10deg);
    }
    30% {
      transform: rotate(10deg);
    }
    60% {
      transform: rotate(10deg);
    }
    90% {
      transform: rotate(-10deg);
    }
    100% {
      transform: rotate(0deg);
    }
  }

  .section-img {
    width: 148px;
    mix-blend-mode: multiply;
    transform: translate3d(0,0,0);
  }
</style>
